@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <h4>Create a new account.</h4>
    <hr />
    <span class="text-danger">@ViewData["Error"]</span>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" autocomplete="new-username" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FName"></label>
                <input asp-for="Input.FName" class="form-control" />
                <span asp-validation-for="Input.FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LName"></label>
                <input asp-for="Input.LName" class="form-control" />
                <span asp-validation-for="Input.LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <div class="form-group">
                <label asp-for="Input.DOB"></label>
                <input asp-for="Input.DOB" class="form-control" />
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <input id="Gender" asp-for="Input.Gender" style="display : none" />

                @Html.DropDownList("Gender",
                new SelectListItem[]
                {
                    new SelectListItem{ Text="Male", Value="Male"},
                    new SelectListItem{ Text="Female", Value="Female"},
                    new SelectListItem{ Text="Other", Value="Other"}
                }, "",
                new
                {
                    @onchange = "document.getElementById('Gender').value=(this.value)", @class = "form-control"
                })

                <script>
                    function callChangefunc(val) {
                        window.location.href = "/Controller/ActionMethod?value=" + val;
                    }
                </script>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}